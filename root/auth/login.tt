<h1>[% c.loc('Log In') %]</h1>
<form id="auth" method="post">
 <fieldset class="narrow">
  <table>
   <tfoot>
    <tr>
     <td colspan="2'">
      <a href="#" class="submit_button orange">Submit</a>
     </td>
    </tr>
   </tfoot>
   <tbody>
    <tr>
     [% text_field({ label => 'Username', name => 'auth.username', hint => 'Username', required => 1 }); %]
    </tr>
    <tr>
      [% text_field({ label => 'Password', name => 'auth.password', type => 'password', required => 1 }); %]
    <tr>
   </tbody>
  </table>
 </fieldset>
</form>
