[% page.crumbs.push({ 'Add Product' => '' }) %]
<h1>[% c.loc('Add Product') %]</h1>
<form id="product" method="post" action="[% c.uri_for_action('/admin/product/root') %]">
 <fieldset>
  <table>
   <tfoot>
    <tr>
     <td colspan="2'">
      <input type="image" src="[% static('/static/images/buttons/submit.png') %]" alt="[% c.loc('Submit Form') %]">
     </td>
    </tr>
   </tfoot>
   <tbody>
    <tr>
     [% text_field({ label => 'Name', name => 'name', hint => 'Name', required => 1 }); %]
    </tr>
    <tr>
     [% textarea_field({ label => 'Description', name => 'description', hint => 'Explanation of Issue', required => 1, rows => 8 }); %]
    </tr>
   </tbody>
  </table>
 </fieldset>
</form>
